---
import "../styles/global.css"
 
const { link,texto,clases } = Astro.props;

---
<head>
		<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>Login</title>
	</head>

<header class="bg-[#141218] p-2 pr-[8%] pl-[5%] sticky z-20 top-0 flex ">
			<a aria-label="Inicio"  href="/" class="flex gap-2"
				><img src="public/icon.png" alt="Logo" class="h-[80px] rounded-4xl w-[80px]" />
				 
				<span class="text-3xl font-extrabold text-purple-400 pt-5    rounded-3xl  ">
					Ritmo<span class="text-white">Academic</span>
			  
				 
				<nav class="flex gap-6 items-center	 ">
					<a
						href="/#nosotros"
						class="text-white   hover:text-purple-400 font-semibold  "
						>Nosotros</a
					>
				 
					<a
						href="/#contacto"
						class="text-white hover:text-purple-400 font-semibold"
						>Contacto</a
					>
					<a
						href="/noticias	"
						class="text-white hover:text-purple-400 font-semibold  "
						>Noticias</a
					>
				 
					<div class="ml-[80%] flex ">
						<a id="atras" href={link} class={clases}>
						 
						{texto} 
					</a>
				 
                  <button   id="logoutBtn"  class="bg-purple-600 font-semibold ml-5 fix  text-white px-4 py-2 rounded hover:bg-purple-800"  >
                    Salir
                  </button>	
					</div>
						
						</nav> 
				</a
			>
		</header>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("logoutBtn");
    const btnatras = document.getElementById("atras");
    btn?.addEventListener("click", () => {
localStorage.setItem('login', 'false');
      window.location.href = "/"; // Redirige a la página de login
    });
    btnatras?.addEventListener("click", () => {
       window.location.href = "/admin"; // Redirige a la página de login
    });
  });
</script>