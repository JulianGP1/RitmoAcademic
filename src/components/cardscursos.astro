---
const { titulo, descripcion, link } = Astro.props;
---

<a href={link} class="tarjeta" id="card"  >
  <div class="bg-[#141218] rounded-2xl p-6 w-72 shadow-lg hover:shadow-2xl transition-shadow duration-300">
    <h3 class="text-xl font-bold mb-2 text-white">{titulo}</h3>
    <p class="text-gray-300">
      {descripcion}
    </p>
  </div>
</a>
<style>
  .tarjeta {
  
    background: #1a1721; /* tarjeta oscura */
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.6);
  transition: transform 0.2s ease, box-shadow 0.3s ease;
  background: #141218;
}
.tarjeta:hover {
  transform: translateY(-5px);
  box-shadow: 0 6px 20px rgba(169, 94, 255, 0.3); /* efecto hover con sombra morada */
 }

</style>
