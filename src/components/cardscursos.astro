---
const { titulo, descripcion, link } = Astro.props;
---

<a href={link}  >
  <div class="bg-[#141218] rounded-2xl p-6 w-72 shadow-lg hover:shadow-2xl transition-shadow duration-300">
    <h3 class="text-xl font-bold mb-2 text-white">{titulo}</h3>
    <p class="text-gray-300">
      {descripcion}
    </p>
  </div>
</a>
